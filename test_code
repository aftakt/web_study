import random
list = ["ê°€ìœ„", "ë°”ìœ„", "ë³´"]   
coin = 1000

def game (com_cho,user_cho):
    if(user_cho == com_cho):
        
        return "draw"
    elif(user_cho == "ê°€ìœ„" and com_cho == "ë³´") or  (user_cho == "ë°”ìœ„" and com_cho == "ê°€ìœ„") or (user_cho == "ë³´" and com_cho == "ë°”ìœ„"):
       
        return "win"
    else:
       
        return "lose"    


while(coin > 0):
    print("í˜„ì¬ì½”ì¸: {}".format(coin))
    bet_coin = int(input("ë°°íŒ…í•  ê¸ˆì•¡ : "))
    
    while(bet_coin > coin or bet_coin <= 0):
        print("ì˜ëª» ì…ë ¥í•˜ì…¨ìŠµë‹ˆë‹¤")
        bet_coin = int(input("ë°°íŒ…í•  ê¸ˆì•¡ : "))    
        
    life = 3
    win_flag = False
    
    while(life>0):
        com_cho =random.choice(list)
        print("í˜„ì¬ê¸°íšŒ: {}".format(life))
        user_cho = input("ê°€ìœ„/ë°”ìœ„/ë³´: ")
        rcp = game (com_cho, user_cho)   
        print("ì»´í“¨í„°ì˜ ì„ íƒ:", com_cho)
         
        if(rcp == "draw"):
            print("ë¬´ìŠ¹ë¶€")
            
        elif(rcp == "win"):
            print("ìŠ¹ë¦¬")
            win_flag = True 
        else:
            print("íŒ¨ë°°")    
        
        life = life-1   
    
    if(win_flag):
        coin = coin+bet_coin
    else:
        coin = coin-bet_coin   
        
print("ì½”ì¸ì´ ì—†ìŠµë‹ˆë‹¤! ê²Œì„ ì¢…ë£Œ!")        
            
