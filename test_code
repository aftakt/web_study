def login():
    user_id = input("이름을 입력하세요")
    

    if (user_id not in passwd):
        print("첫 로그인!")
        passwd[user_id] = user_id
        print("안녕하세요 반갑습니다" + user_id + "님")
        
    elif(user_id in passwd):
        print(user_id + "다시 오시다니, 환영합니다")    
    else:
        print("다시 입력해주세요")    
    return user_id   
    
        
while True:
    user_id = login()
    
    if user_id.isdigit():  # 🔹 숫자로만 이루어진 경우 (isnumeric() 대신)
        print("잘못 입력하셨습니다")
        continue  # 🔹 다시 로그인 요청
    else:
        break  
              

answer =input("게임을 시작할까요? (예/아니오) :")

if(answer == "예"):
    print("게임을 시작합니다")
else:
    print("게임을 종료합니다")
    exit()                 
    
import random
list = ["가위", "바위", "보"]   
coin = 1000

def game (com_cho,user_cho):
    if(user_cho == com_cho):
        
        return "draw"
    elif(user_cho == "가위" and com_cho == "보") or  (user_cho == "바위" and com_cho == "가위") or (user_cho == "보" and com_cho == "바위"):
       
        return "win"
    else:
       
        return "lose"    


while(coin > 0):
    print("현재코인: {}".format(coin))
    bet_coin = int(input("배팅할 금액 : "))
    
    while(bet_coin > coin or bet_coin <= 0):
        print("잘못 입력하셨습니다")
        bet_coin = int(input("배팅할 금액 : "))    
        
    life = 3
    win_flag = False
    
    while(life>0):
        com_cho =random.choice(list)
        print("현재기회: {}".format(life))
        user_cho = input("가위/바위/보: ")
        rcp = game (com_cho, user_cho)   
        print("컴퓨터의 선택:", com_cho)
         
        if(rcp == "draw"):
            print("무승부")
            
        elif(rcp == "win"):
            print("승리")
            win_flag = True 
        else:
            print("패배")    
        
        life = life-1   
    
    if(win_flag):
        coin = coin+bet_coin
    else:
        coin = coin-bet_coin   
        
print("코인이 없습니다! 게임 종료!")        
            
